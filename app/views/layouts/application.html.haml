!!!
%html
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html;charset=utf-8'}
    %title= h(@page_title || "Filmy") << " - My Movie Database by Krzysztof Jabłoński"
    = stylesheet_link_tag 'style', 'prettyPhoto'
    = javascript_include_tag 'jquery-1.3.2.min', 'jquery.prettyPhoto', 'application'
    = yield(:head)
  %body
    #container
      .header
        .box
          = link_to image_tag("logo.png", :class => "logo"), root_url
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}", :class => "box"
      = yield

